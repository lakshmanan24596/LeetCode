class Solution 
{
    public boolean isPalindrome(int x) 
    {       
        if(x < 0)
            return false;
        
        int input = x;
        int digit, revNum = 0;
       
        while(x != 0)
        {
            digit = x % 10;
            revNum = (revNum * 10) + digit;
            x = x / 10;
        }
        
        return (revNum == input) ? true : false;
    }
}